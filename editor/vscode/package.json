{
  "name": "java_lsp",
  "description": "A java language server",
  "author": "emilycares",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/emilycares/java_lsp"
  },
  "publisher": "emilycares",
  "categories": [],
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.100.0"
  },
  "activationEvents": [
    "onLanguage:java"
  ],
  "main": "./client/out/extension",
  "contributes": {
    "configuration": {
      "type": "object",
      "title": "java_lsp",
      "properties": {
        "java_lsp.executablePath": {
          "scope": "resource",
          "type": "string",
          "default": "",
          "description": "The path to the java_lsp executable."
        }
      }
    },
    "commands": [
      {
        "command": "ReloadDependencies",
        "title": "Reload Dependencies",
        "category": "java_lsp"
      },
      {
        "command": "UpdateDependencies",
        "title": "Update Dependencies",
        "category": "java_lsp"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm ci && cd ..",
    "test": "sh ./scripts/e2e.sh",
    "build": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.130",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/vsce": "^2.32.0",
    "eslint": "^8.57.1",
    "mocha": "^10.8.2",
    "typescript": "^5.9.3"
  }
}
